<div class="card bg-warning mb-3 mt-3">
<h1 class="display-1 text-center font-weight-bolder">Eat-Da-Burger!</h1>
</div>

<div class="card-deck">

<div class="card bg-warning mb-3 p-3">
<h2 class="card-title text-center">Devour the Burger!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="card bg-warning mb-3 p-3">
<h2 class="card-title text-center">Remake the Burger!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

</div>

<div class="text-center card bg-warning mb-3 p-3">
    <h2>Enter a burger you want to eat, and click the submit button</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="burger_name">
        </div>
        <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
</div>